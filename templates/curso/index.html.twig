{% extends 'base.html.twig' %}

{% block title %}Curso index{% endblock %}

{% block body %}

{% for flash_message in app.session.flashbag.get('error') %}
<div class="alert alert-danger">
        {{ flash_message }}
    </div>
{% endfor %}

    <h1>Curso index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCurso</th>
                <th>Nombre</th>
                <th>FechaPublicacion</th>
                <th>Autor</th>
                <th>Estado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in cursos %}
            <tr>
                <td>{{ curso.idCurso }}</td>
                <td>{{ curso.nombre }}</td>
                <td>{{ curso.fechaPublicacion ? curso.fechaPublicacion|date('Y-m-d') : '' }}</td>
                <td>{{ curso.idUsuario.nombre }}</td>
                <td>{{ curso.estado }}</td>
                <td>
                    <a href="{{ path('app_curso_show', {'idCurso': curso.idCurso}) }}">show</a>
                    <a href="{{ path('app_curso_edit', {'idCurso': curso.idCurso}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_curso_new') }}">Create new</a>
{% endblock %}
